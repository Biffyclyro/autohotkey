
  echo "[Service]
  User=$USER
  WorkingDirectory=/usr/bin/
  ExecStart=autohotkey
  Environment=DISPLAY=:0
  Environment=XAUTHORITY=/home/$USER/.Xauthority
  Restart=always

  [Install]
  WantedBy=multi-user.target
  WantedBy=xsession.target" >> ./autohotkey.service 

  mv $1/autohotkey.service $2/usr/lib/systemd/system/

  mkdir -p $2/home/$USER/.config/autohotkey

  cp $1/template.txt.exemple $2/home/$USER/.config/autohotkey/template.txt
